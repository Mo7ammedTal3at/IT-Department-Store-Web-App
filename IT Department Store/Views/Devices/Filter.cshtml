@model IEnumerable<IT_Department_Store.Models.Device>

@{
    ViewBag.Title = "Filter";
}

<h2>Filter</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeviceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new {id = item.Id},new{@class="btn btn-warning"}) |
                @Html.ActionLink("تفاصيل", "Details", new {id = item.Id}, new { @class = "btn btn-info" }) |
                @Html.ActionLink("حذف", "Delete", new {id = item.Id}, new { @class = "btn btn-danger" })|
                @Html.ActionLink("تغيير المكان", "Create","DeviceMovements", new {id = item.Id}, new { @class = "btn btn-success" })

            </td>
        </tr>
    }

</table>
