@model IEnumerable<IT_Department_Store.Models.MaintenanceOperation>

@{
    ViewBag.Title = "Filter";
}

<h2>Filter</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Device.DeviceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Device.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Problem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solution)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Device.DeviceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Device.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Problem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Solution)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                @Html.ActionLink("انهاء الصيانة", "FinishMaintenence", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
